<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/tvDSBHIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTenBaiHat"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:textColor="#000000"
            android:layout_toRightOf="@id/tvDSBHIndex"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ca si"
            android:textSize="20sp"
            android:textColor="#939191"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@id/tvTenBaiHat"
            android:layout_toRightOf="@id/tvDSBHIndex"
            android:id="@+id/tvTenCaSiBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>