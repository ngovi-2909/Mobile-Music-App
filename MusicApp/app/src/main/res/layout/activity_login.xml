    <ScrollView android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD9222">

            <View
                android:id="@+id/_bg__login"
                android:layout_width="390dp"
                android:layout_height="758dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/_bg__login_shape" />

            <View
                android:id="@+id/rectangle_2"
                android:layout_width="420dp"
                android:layout_height="758dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_2_shape3" />

            <ImageView
                android:id="@+id/rectangle_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="104dp"
                android:contentDescription="rectangle_1"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/welcome_back_"
                android:layout_width="278dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="224dp"
                android:text="Welcome Back"
                android:textColor="@color/_bg__login_color"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/_rectangle_3"
                android:layout_width="254dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="505dp"
                android:onClick="login"
                android:backgroundTint="#F3A128"
                android:text="Login" />

            <EditText
                android:background="@drawable/rectangle_9_shape3"
                android:id="@+id/username"
                android:layout_width="326dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="333dp"
                android:paddingLeft="10dp"
                android:hint="Username"
                android:textColor="@color/username_color"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="326dp"
                android:layout_height="44dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="416dp"
                android:background="@drawable/rectangle_9_shape3"
                android:layout_centerHorizontal="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/group_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="600dp">

                <TextView
                    android:id="@+id/login_with"
                    android:layout_width="200dp"
                    android:layout_height="28.5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:text="Do you haven't an account?"
                    android:textColor="@color/_bg__login_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/google"
                    android:layout_width="69.5dp"
                    android:layout_height="28.5dp"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="0dp"
